@model IEnumerable<Covid19App.Models.UserModels.UserModel>

@{
    ViewData["Title"] = "Index";
}



<h3 style="text-align:center">Danh sách người dùng</h3>

<p>
    <a asp-action="Create" style="background-color: #b3e0ff; margin-bottom: 1em;" class="btn btn-outline-primary">
        <i class="fa fa-plus"></i>Thêm người dùng
    </a>
</p>
<table class="table table-bordered table-hover" id="data">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Role
            </th>

            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa quyền</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $('#data').DataTable({
        dom: 'Bfrtip',
        "bDestroy": true,
    });
</script>
@model IEnumerable<Covid19App.Models.PatientAdminViewModel>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Danh sách người tiếp xúc với @ViewBag.PatientName</h1>
<p>
    <a asp-action="CreateWithParent" asp-route-id="@ViewBag.PatientId" style="background-color: #b3e0ff; margin-bottom: 1em;" class="btn btn-outline-primary">
    <i class="fa fa-plus"></i>Thêm mới</a>
</p>
<table class="table table-bordered table-hover" id="data">
    <thead class="head">
        <tr>
            <th>
                Tên
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Cấp độ
            </th>
            <th>
                Nguồn tiếp xúc
            </th>
            <th>
                Tình trạng
            </th>
            <th>
                Kinh độ
            </th>
            <th>
                Vĩ độ
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Ngày chỉnh sửa
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lng)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index">Back to List</a>

<script>
    $('#data').DataTable({
        dom: 'Bfrtip',
        "bDestroy": true,
    });

</script>
